{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "company": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::company.company"
    },
    "job_title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "jaf": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "inactive"
      ],
      "required": true,
      "default": "inactive"
    },
    "job_status": {
      "type": "enumeration",
      "enum": [
        "open",
        "ongoing",
        "results declared",
        "abdanoned"
      ]
    },
    "last_date": {
      "required": true,
      "type": "datetime"
    },
    "classification": {
      "type": "enumeration",
      "enum": [
        "A1",
        "B1"
      ],
      "required": false
    },
    "min_X_percentage": {
      "type": "decimal",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "min_XII_percentage": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "max": 100
    }
  }
}
